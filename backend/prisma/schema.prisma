// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Nexus_Settings {
  id    Int @id @default(autoincrement())
  delay Int @default(30000)
}

model Nexus_Admins {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model Nexus_Department {
  id          Int    @id @default(autoincrement())
  main        String
  department  String @unique
  pptxVersion Int    @default(1)
  background  String

  actions    App_ActionTracker[]
  displays   Nexus_Display[]
  powerPoint App_PowerPoint[]
}

model Nexus_Display {
  id         Int    @id @default(autoincrement())
  main       String
  sub        String
  department String
  display    String
  background String
  templateID Int?

  template    Template?        @relation(fields: [templateID], references: [id])
  departments Nexus_Department @relation(fields: [department], references: [department])
}

enum Design {
  FullDisplay
  FullDisplay2
  FullDisplay3
  FullDisplay4
  FullDisplay5
  FullWithCircle
  ThreeOnTwo
  OneByThree
  SplitScreen
  TwoByTwo
}

model Template {
  id         Int     @id @default(autoincrement())
  title      String
  design     Design  @default(FullDisplay)
  background String
  gradient   String?
  transition Int     @default(30)

  displays Nexus_Display[]
  apps     TemplateOnApp[]
}

model TemplateOnApp {
  templateId Int
  appName    String
  position   Int @default(0)

  template Template @relation(onDelete: Cascade, fields: [templateId], references: [id])
  app      App      @relation(onDelete: Cascade, fields: [appName], references: [name])

  @@id([templateId, appName])
}

enum Apps {
  PowerBI
  PowerPoint
  ActionTracker
}

model App {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  type      Apps
  templates TemplateOnApp[]

  powerBI       App_PowerBI?       @relation("AppPowerBI")
  powerPoint    App_PowerPoint?    @relation("AppPowerPoint")
  actionTracker App_ActionTracker? @relation("AppActionTracker")
}

model App_ActionTracker {
  id              Int     @id
  department      String
  departmentField String
  area            String?
  areaField       String?

  app         App              @relation("AppActionTracker", fields: [id], references: [id])
  departments Nexus_Department @relation(fields: [department], references: [department])
}

enum PowerBIType {
  Report
  Dashboard
}

model App_PowerBI {
  id          Int     @id
  type        String
  reportID    String
  groupID     String
  customEmbed String?
  pageName    String?

  app App @relation("AppPowerBI", fields: [id], references: [id])
}

model App_PowerPoint {
  id         Int     @id
  main       Boolean @default(true)
  department String

  app         App              @relation("AppPowerPoint", fields: [id], references: [id])
  departments Nexus_Department @relation(fields: [department], references: [department])
}

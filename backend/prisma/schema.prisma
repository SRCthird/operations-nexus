generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Nexus_Settings {
  ID    Int @id @default(autoincrement())
  Delay Int @default(30000)
}

model Nexus_Admins {
  ID       Int    @id @default(autoincrement())
  Email    String @unique
}

enum Apps {
  PowerBI
  PowerPoint
  ActionTracker
}

model App_ActionTracker {
  ID Int @id @default(autoincrement()) 
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department String 
  DepartmentField String 
  Area String? 
  AreaField String? 
}

model App_PowerBI {
  ID Int @id @default(autoincrement())
  Type String 
  PowerBI_ID String 
  Group_ID String 
  Custom_Embed String? 
  Page_Name String? 
}

model App_PowerPoint {
  ID Int @id @default(autoincrement())
  Main Boolean @default(true) 
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department String 
}

model Nexus_Department {
  ID Int @id @default(autoincrement())
  Main String 
  Actions     App_ActionTracker[]
  Displays    Nexus_Display[]
  PowerPoint  App_PowerPoint[]
  Department String @unique
  PPTXVersion Int @default(1)
  Background String 
}

model Nexus_Display {
  ID Int @id @default(autoincrement())
  Main String 
  Sub String 
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department String 
  Display String 
  Background String 
  Template Templates? 
  Template_ID Int? 
}

enum Templates {
  FullDisplay
  FullDisplay2
  FullDisplay3
  FullDisplay4
  FullDisplay5
  FullWithCircle
  ThreeOnTwo
  OneByThree
  SplitScreen
  TwoByTwo

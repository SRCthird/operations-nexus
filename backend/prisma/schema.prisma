// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Nexus_Settings {
  ID    Int @id @default(autoincrement())
  Delay Int @default(30000)
}

model Nexus_Admins {
  ID       Int    @id @default(autoincrement())
  Email    String @unique
}

model Nexus_ActionTracker {
  ID          Int              @id @default(autoincrement())
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department  String
  Line        String
  Date_Opened DateTime         @db.Date
  Category    String
  Description String
  Updates     String?
  Owner       String?
  Date_Due    DateTime?        @db.Date
  Status      Int
  Priority    Int
  Logged_By   String
  Date_Closed DateTime?        @db.Date
}

model Nexus_Department {
  ID          Int                   @id @default(autoincrement())
  Main        String
  Department  String                @unique
  Background  String?
  PPTXVersion Int                   @default(1)
  Actions     Nexus_ActionTracker[]
  Displays    Nexus_Display[]
  PowerPoint  App_PowerPoint[]
}

model Nexus_Display {
  ID          Int              @id @default(autoincrement())
  Main        String
  Sub         String
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department  String
  Display     String           @unique
  Background  String?
  Page        Pages?
  Page_ID     Int?
}

enum Pages {
  FullDisplay
  FullWithCircle
  OneByThree
  SplitScreen
  ThreeOnTwo
  TwoByTwo
}

model Page_FullDisplay {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
}

model Page_FullWithCircle {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
  App2       Apps?
  App2_ID    Int?
}

model Page_OneByThree {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
  App2       Apps?
  App2_ID    Int?
  App3       Apps?
  App3_ID    Int?
  App4       Apps?
  App4_ID    Int?
}

model Page_SplitScreen {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
  App2       Apps?
  App2_ID    Int?
}

model Page_ThreeOnTwo {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
  App2       Apps?
  App2_ID    Int?
  App3       Apps?
  App3_ID    Int?
  App4       Apps?
  App4_ID    Int?
  App5       Apps?
  App5_ID    Int?
}

model Page_TwoByTwo {
  ID         Int     @id @default(autoincrement())
  Title      String
  Background String
  Gradient   String?
  App1       Apps?
  App1_ID    Int?
  App2       Apps?
  App2_ID    Int?
  App3       Apps?
  App3_ID    Int?
  App4       Apps?
  App4_ID    Int?
}

enum Apps {
  PowerBI
  PowerPoint
}

enum PowerBI {
  Report
  Dashboard
  Tile
  Visual
  QNA
}

model App_PowerBI {
  ID           Int     @id @default(autoincrement())
  Type         String
  PowerBI_ID   String
  Group_ID     String
  Custom_Embed String?
  Page_Name    String?
}

model App_PowerPoint {
  ID          Int              @id @default(autoincrement())
  Main        Boolean          @default(true)
  Departments Nexus_Department @relation(fields: [Department], references: [Department])
  Department  String
}

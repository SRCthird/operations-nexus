// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Nexus_Settings {
  id    Int @id @default(autoincrement())
  delay Int @default(30000)
}

model Nexus_Admins {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model Nexus_Department {
  id          Int    @id @default(autoincrement())
  main        String
  department  String @unique
  pptxVersion Int    @default(1)
  background  String

  displays   Nexus_Display[]
  powerPoint App_PowerPoint[]
}

model Nexus_Display {
  id         Int    @id @default(autoincrement())
  main       String
  department String
  display    String @unique
  background String
  title      String

  template    Template?        @relation(fields: [title], references: [title])
  departments Nexus_Department @relation(fields: [department], references: [department])
}

enum Design {
  FullDisplay
  FullDisplay2
  FullDisplay3
  FullDisplay4
  FullDisplay5
  FullWithCircle
  ThreeOnTwo
  OneByThree
  SplitScreen
  TwoByTwo
  Transition2x2_3on2
}

model Template {
  id         Int     @id @default(autoincrement())
  title      String  @unique
  design     Design  @default(FullDisplay)
  background String
  gradient   String?
  transition Int     @default(30)

  apps     App[]
  displays Nexus_Display[]
}

enum Apps {
  PowerBI
  PowerPoint
  IFrame
}

model App {
  id   Int    @id @default(autoincrement())
  name String @unique
  type Apps

  powerBI       App_PowerBI?       @relation("AppPowerBI")
  powerPoint    App_PowerPoint?    @relation("AppPowerPoint")
  iFrame        App_IFrame?        @relation("AppIFrame")

  templates Template[]
}

enum PowerBIType {
  report
  dashboard
  title
  visual
  qna
}

model App_PowerBI {
  id          Int     @id
  type        String
  reportID    String
  groupID     String
  customEmbed String?
  pageName    String?

  app App @relation("AppPowerBI", fields: [id], references: [id])
}

model App_PowerPoint {
  id         Int     @id
  main       Boolean @default(true)
  department String

  app         App              @relation("AppPowerPoint", fields: [id], references: [id])
  departments Nexus_Department @relation(fields: [department], references: [department])
}

model App_IFrame {
  id  Int     @id
  url String

  app App @relation("AppIFrame", fields: [id], references: [id])
}
